
<style>
    .campoErro {
        border-color: red;
    }
</style>

<script src="/js/cliente/alterar.js"></script>

<h1>Alterar usuário</h1>

<div>
    <div class="alert alert-danger" role="alert" id="erros" style="display:none">

    </div>
    <div class="alert alert-success" role="alert" id="alertaSucesso" style="display:none;" >
        
      </div>
    <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <input type="hidden" id="inputId" value="<%= alter.clienteId %>">
            <input type="hidden" id="inputCod" value="<%= alter.clienteCod %>">
          
            <label for="inputNome">Nome</label>
            <input value="<%= alter.clienteNome %>" type="text" class="form-control" id="inputNome">

            <label for="inputData">Data</label>
            <input value="<%= alter.data %>" type="text" class="form-control" id="inputData">
            
            <label for="inputEnt">Hora de Entrega</label>
            <input value="<%= alter.clienteHora %>" type="text" class="form-control" id="inputEnt">

            <label for="inputDev">Hora de devoluçao</label>
            <input value="<%= alter.clienteDevolucao %>" type="text" class="form-control" id="inputDev">

            <label for="inputCpf">CPF</label>
            <input maxlength="11" value="<%= alter.cpf %>" type="text" class="form-control" id="inputCpf">

            <label for="inputTele">Telefone</label>
            <input maxlength="11" value="<%= alter.tele %>" type="text" class="form-control" id="inputTele">
            
            <div class="form-group">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="selCasa">Perfil</label>
                        <select class="form-control" id="selCasa">
                            <option value="0">--Selecione--</option>
                            <% for(let i = 0; i < listarCasas.length; i++)  { 
                                if(listarCasas[i].casaId == alter.casaId) { %>
                                    <option selected value="<%= listarCasas[i].casaId %>"><%= listarCasas[i].casaNome %></option>
                                <% } else { %>
                                    <option value="<%= listarCasas[i].casaId %>"><%= listarCasas[i].casaNome %></option>
                                <% } %>                     
                            <% } %>
                        </select>
                    </div>
                </div>
        
        </div>


          
          <!-- cod: inputCod.value,
          id: inputId.value,
          nome: inputNome.value,
          data: inputData.value,
          hora: inputEnt.value,
          devo: inputDev.value,
          cpf: inputCpf.value,
          tele: inputTele.value,
          casa: selCasa.value -->

        <button type="button" id="btnAlterar" class="btn btn-primary">Gravar</button>
        <a class="btn btn-secondary" href="/clientes">Voltar</a>
      </form>
</div>