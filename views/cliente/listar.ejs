<script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
<script src="/js/cliente/filtrar.js"></script>
<script src="/js/cliente/listar.js"></script>
<style>
    .radioOrd > label {
        margin-right: 10px;
    }
</style>

<h1>Usuários</h1>

<div>
    <a class="btn btn-primary" href="/clientes/cadastro">
        Criar nova visita
    </a>
    <br><br>
    <div>
        <div class="input-group mb-3">
            <select class="form-control" id="selBusca">
                <option selected value="1">Nome do Cliente</option>
                <option value="2">CPF do Cliente</option>
                <option value="3">Data da Visita</option>
            </select>
            <input id="inputPesquisa" type="text" class="form-control">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button" id="btnPesquisa"><i class="fas fa-search"></i> Pesquisar</button>
            </div>
        </div>
        <div class="radioOrd">
            <div>Ordernar por:</div>
            <label><input value="1" type="radio" checked="checked" name="rdOrdenacao" />Nome</label>
            <label><input value="2" type="radio" name="rdOrdenacao" />CPF</label>
            <label><input value="3" type="radio" name="rdOrdenacao" />Data</label>
        </div>
    </div>
    <div>
        <button id="btnExportarExcel" class="btn btn-primary"><i class="fas fa-file"></i> Exportar para Excel</button>
    </div>


    <div style="margin-top:20px;">
        <div class="table-responsive">
            <table id="tabelaPedidos" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Nome Casa</th>
                        <th>Data</th>
                        <th>Hora de Entrega</th>
                        <th>Hora de Devolução</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th>Entregue?</th>
                        <th>VALIDA ENTREGA</th>
                    </tr>
                </thead>
                <tbody id="corpoTabelaPedido">
                    <% lista.forEach(function(value, index) { %>
                            <tr>
                                <td><%= value.clienteId %></td>
                                <td><%= value.nomeCliente %></td>
                                <td><%= value.casa %></td>
                                <td><%= value.data %></td>
                                <td><%= value.hora %></td>
                                <td><%= value.devolucao %></td>
                                <td><%= value.cpf %></td>
                                <td><%= value.tele %></td>
                                <td><%= value.ok %></td>
                                <td>
                                    <div>
                                       
                                        <td>
                                            <div>
                                                <a href="/clientes/validar/<%= value.clienteId %>" title="Editar" class="btn btn-primary">
                                                    <i class="fas fa-square"></i>
                                                </a>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <button data-id="<%= value.clienteId %>" title="Excluir" class="btn btn-danger btnExcluir">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <a href="/clientes/alterar/<%= value.clienteId %>" title="Editar" class="btn btn-primary">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                            </div>
                                        </td>

                               
                            </tr>  
                                                     
                        <% }) %>        
                </tbody>
            </table>
        </div>
    </div>
</div>
